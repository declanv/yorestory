<nav class= "nav">
          <p><%= link_to "users", users_path %> | <%= link_to "timelines", timelines_path  %><br>
        <%= " Welcome, #{current_user.name}" if current_user %>
      </p>
        </nav>

          <div class="user_panel">
    <div class="photo">
<img class="user_photo" src=<%= @user.photo %>>
</div>
<div class="info">
  <h2 class="user_name">
  <%= @user.name %>
</h2>
<p class="user_bio">
  <%= @user.bio %>
</p>
</div>
</div>
<div class="section group">


<h2>Timelines</h2>
<%= render partial: "timelineform", locals: { timeline_local: @timeline, user: @user } %>
</div>
<div class="section group">

<!-- LEFT-HAND COLUMN -->
  <div class="col span_1_of_3_left_timelines">

  <ul class="timelines">
    <% @timelines.each do |timeline| %>
      <li>
        <h4><%= link_to timeline.title, "/timelines/#{timeline.id}" %></h4>
      </li>
    <% end %>
  </ul>
  </div>


 </div>


